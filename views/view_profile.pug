extends header.pug


block header
  -var buttonLink='/addresses'
  -var buttonText='Back to Addresses'
  -var button2disabled='disabled'
  -var button2visibility='visibility:hidden'
  -var button3disabled='disabled'
  -var button3visibility='visibility:hidden'

block content

    .entry
        h1(class='bodyheading') My Profile
        div(class='entryContent')            
            p First name: #{firstName}
            p Lastname: #{lastName}
            p E-mail address: #{email}
            
            a(href='/update_profile' class='linkbutton') Update profile
            a(href='/change_pw' class='linkbutton') Change password
            a(class='linkbutton' id='deleteProfile') Delete profile

block scripts
  script(src="/scripts/view_profile.js")