extends header.pug


block header
  -var buttonLink='/addresses'
  -var buttonText='Back to Addresses Without Saving'
  -var button2disabled='disabled'
  -var button2visibility='visibility:hidden; display:none'
  -var button3disabled='disabled'
  -var button3visibility='visibility:hidden; display:none'


block content
  div(id="addressformcontainer")
    form(method='POST' action='/addresses' id='address_form')
          h1="Add New Address"
          
          div
            
            button(id='dummyDataButton') (Demo mode) Refresh dummy data to first five fields
            br
            br
            
            label(for='addressLineOne') Address: 
            input(type='text' id='addressLineOne' placeholder='Address' name='addressLineOne' maxlength='50' required readonly)
            
            br
            br
            
            label(for='unitNo') Address Line 2 (Apt, Unit etc.): 
            input(type='text' id='unitNo' placeholder='Unit/Apt Number' name='unitNo' maxlength='20' readonly)
            
            br
            br


            label(for='city') City / Town: 
            input(type='text' id='city' placeholder='city' name='city' maxlength='50' required readonly)

            br  
            br
            
            label(for='state') State Abbreviation: 
            input(type='text' id='state' name='state' maxlength='2' required readonly)

            br  
            br
            
            label(for='zip') Zipcode: 
            input(type='text' id='zip' name='zip' maxlength="10" required readonly)

            br  
            br


            label(for='notes') Notes (1000 character max): 
            br
            //- input(type='text' id='notes' placeholder='Notes.' name='notes')//
            textarea(id='notes' placeholder='notes' name='notes' rows='5' cols='60' maxlength='10000')
            

            br  
            br

            label(for='startDate') Start Date: 
            input(type='date' id='startDate' name='startDate' required)

            br  
            br

            label(for='endDate') End Date: 
            input(type='date' id='endDate' name='endDate')

            br
            br

            
            label(for='toPresent' id='toPresentLabel')                I'm still living here 
            
            input(type="checkbox" name="toPresent" value="toPresent" id='toPresent')


          button(type='submit' id='newaddressubmit') Save new address
          script(src="/scripts/new-address.js")