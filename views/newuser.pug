extends simpleHeader.pug


block header
  

block content


  
  .entry
    h1(class='bodyheading') Create account




    div(id="newUserContent")
      form(method='POST' action='/users' id='newUserForm')
          
          
      
        
        label(for='firstname') First name: 
        input(type='text' id='firstname' placeholder='first name' name='firstName' maxlength='50')
        
        br
        br

        label(for='lastname') Last name: 
        input(type='text' id='lastname' placeholder='last name' name='lastName' maxlength='50')
        
        br
        br


        
        label(for='email') Email: 
        input(type='email' id='email' placeholder='email' name='email' maxlength='50' required)
        
        br
        br

        label(for='password') Password: 
        input(type='password' id='password' name='password' required)
        br
        br

        label(for='pw2') Retype Password: 
        input(type='password' name='pw2' id='pw2' required)
        br
        br




        button(type='submit' id='createAccount') Create account
        




block scripts
  script(src="/scripts/newuser.js")
      